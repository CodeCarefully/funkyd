FROM ubuntu:latest as base

WORKDIR /app
RUN apt update && \
    apt install -y git libbind-dev libkrb5-dev libssl-dev libcap-dev libxml2-dev libjson-c-dev libgeoip-dev autoconf automake libtool curl && \
    git clone https://github.com/DNS-OARC/dnsperf.git && \
    cd /app/dnsperf && \
    ./autogen.sh && \
    ./configure && \
    make && \
    make install

FROM base as conf

ADD ./test/run_tests.sh /app/run_tests.sh
ADD ./test/junkdomains /app/junkdomains
ENTRYPOINT /app/run_tests.sh
